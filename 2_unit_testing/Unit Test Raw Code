<script>
  //CUTOMER WANTS TO CALCULATE
    function calculateTip() {
      //AMOUNT UNIT TESTING
      //Unit Test #1
      var amt = 0
      //Unit Test #2
      //var amt = -1
      //Unit Test #3
      //var amt = l

      //TIP UNIT TESTING
      //Unit Test #1
      var tip = 0
      //Unit Test #2
      //var tip = -1
      //Unit Test #3
      //var tip = l

      //NUMBER OF PEOPLE UNIT TESTING
      //Unit Test #1
      var n = 0
      //Unit Test #2
      //var n = -1
      //Unit Test #3
      //var n = l

        //CHOOSING TIP AMOUNT
        var moneyforEach = 0;
        //SUGGESTED TIP
           //IF # OF PEOPLE SHARING BTWN 1-6 
        if (n < 7 && n > 0)
        {
          //IF THE VAR = 1 THEN JUST ADD THAT TO TOTAL BILL IF NOT, CALCULATE BY %
        if(tip == 1)
        {   
            var customTip = document.getElementById("customtip").value; 
            amt = parseInt(amt)+parseInt(customTip);
        }
        else 
        {
            amt = parseInt(amt)+(parseInt(amt)*tip);
        }
        //DISPLAY TOTAL 
        amt = parseInt(amt)/parseInt(n);
        document.getElementById("result").innerHTML = "Each person should pay: $"+amt;
        //document.getElementById("result").innerHTML = "Each person should pay : "+amt;
}
 //IF # OF PEOPLE SHARING NOT BTWN 1-6
else {
  console.log("Enter a different amount")
  document.getElementById("result").innerHTML = "The amount of people sharing a bill must be between 1 and 6. Please try again. ";
}
    }

